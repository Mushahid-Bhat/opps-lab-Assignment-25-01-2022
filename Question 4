// question 4 opps lab

#include <iostream>

using namespace std;

int main(){

	float x,y;	cout<<"Enter x and y coordinates of a point respectively"<<"\n";

	cin>>x>>y;

	if (x==0 && y==0){

	cout<<"("<< x <<"," << y<<")"<<"lies on origin";

	}

	if(x>0 && y>0){

	cout<<"("<< x <<"," << y<<")"<<"lies in 1st Quad";

	    }

	else if(x<0 && y>0){

	cout<<"("<< x <<"," << y<<")"<<"lies in 2nd Quad";

	}

	else if(x<0 && y<0){

	cout<<"("<< x <<"," << y<<")"<<"lies in 3rd Quad";

	}

	else if(x>0 && y<0){

	cout<<"("<< x <<"," << y<<")"<<"lies in 4th Quad";

	}

	else if (x==0 && y>0 || y<0){

	cout<<"("<< x <<"," << y<<")"<<"lies on y axis";

	}

	else if(y==0 && x>0 || x<0)

	{

	cout<<"("<< x <<"," << y<<")"<<"lies on x axis";

	}

	

	

}
